<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Book1Brief">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="418dp"
        android:layout_height="734dp"
        app:srcCompat="@drawable/background"
        tools:ignore="ImageContrastCheck"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="-2dp" />

    <ImageButton
        android:id="@+id/GoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:srcCompat="@drawable/arrow_left"
        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck,ImageContrastCheck"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="429dp"
        android:layout_height="567dp"
        app:srcCompat="@drawable/infobackground"
        tools:layout_editor_absoluteX="-12dp"
        tools:layout_editor_absoluteY="176dp" />

    <Button
        android:id="@+id/Brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Brief"
        android:textColor="#800E54"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="185dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="147dp"
        android:layout_height="225dp"
        app:srcCompat="@drawable/book9999_1"
        tools:ignore="ImageContrastCheck"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="94dp" />

    <Button
        android:id="@+id/Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Info"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="185dp" />

    <ScrollView
        android:layout_width="310dp"
        android:layout_height="222dp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="343dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" A History of Ancient Egypt: From the First Farmers to the Great Pyramid:"
                android:textColor="#180640"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Famed archaeologist John Romer draws on a lifetime of research to tell one history's greatest stories; how, over more than a thousand years, a society of farmers created a rich, vivid world where one of the most astounding of all human-made landmarks, the Great Pyramid, was built. Immersing the reader in the Egypt of the past, Romer examines and challenges the long-held theories about what archaeological finds mean and what stories they tell about how the Egyptians lived. More than just an account of one of the most fascinating periods of history, this engrossing book asks readers to take a step back and question what they've learned about Egypt in the past. Fans of Stacy Schiff's Cleopatra and history buffs will be captivated by this re-telling of Egyptian history, written by one of the top Egyptologists in the world." />
        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/Download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:srcCompat="@drawable/download"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="649dp" />

    <ImageButton
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:srcCompat="@drawable/pause_circle"
        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck"
        tools:layout_editor_absoluteX="310dp"
        tools:layout_editor_absoluteY="655dp" />

    <ImageButton
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:srcCompat="@drawable/play_circle"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="655dp" />

</android.support.constraint.ConstraintLayout>