<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Book1Brief">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="418dp"
        android:layout_height="734dp"
        app:srcCompat="@drawable/background"
        tools:ignore="ImageContrastCheck"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="-2dp" />

    <ImageButton
        android:id="@+id/GoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:srcCompat="@drawable/arrow_left"
        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck,ImageContrastCheck"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="429dp"
        android:layout_height="567dp"
        app:srcCompat="@drawable/infobackground"
        tools:layout_editor_absoluteX="-12dp"
        tools:layout_editor_absoluteY="176dp" />

    <Button
        android:id="@+id/Brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Brief"
        android:textColor="#800E54"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="185dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="147dp"
        android:layout_height="225dp"
        app:srcCompat="@drawable/book7"
        tools:ignore="ImageContrastCheck"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="94dp" />

    <Button
        android:id="@+id/Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Info"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="185dp" />

    <ScrollView
        android:layout_width="310dp"
        android:layout_height="222dp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="343dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How the Mind Works:"
                android:textColor="#180640"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="“A model of scientific writing: erudite, witty, and clear.” —New York Review of Books The Pulitzer Prize finalist and national bestseller How the Mind Works is a fascinating, provocative work exploring the mysteries of human thought and behavior. How do we see in three dimensions? How do we remember names and faces? How is it, indeed, that we ponder the nature of our own consciousness? Why do we fall in love? In this bold, extraordinary book, Pinker synthesizes the best of cognitive science and evolutionary biology to explain what the mind is, how it has evolved, and, ultimately, how it works. This edition includes a new afterword that explores the impact of the book and its relevance today." />
        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/Buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:srcCompat="@drawable/buy"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="649dp" />

    <ImageButton
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:srcCompat="@drawable/pause_circle"
        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck"
        tools:layout_editor_absoluteX="310dp"
        tools:layout_editor_absoluteY="655dp" />

    <ImageButton
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:srcCompat="@drawable/play_circle"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="655dp" />

</android.support.constraint.ConstraintLayout>